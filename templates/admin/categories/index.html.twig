		<div class="left ">
        <ul>
            <a href="{{ path('admin_home') }}">
                <li class="item-menu">
                    <i class="fa fa-home fa-2x" aria-hidden="true"></i> 
                    <span class="menu">Admin</span>
                </li>
            </a> 
            <a href="ajout">
                <li class="item-menu">
                    <i class="fas fa-tag fa-2x" aria-hidden="true"></i>
