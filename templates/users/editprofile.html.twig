{% extends 'base.html.twig' %}

{% block title %}Modification du profil de {{ app.user.firstname }} {{ app.user.name }}{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="row">
		<div class="left ">
        <ul>
            <a href="{{ path('app_home') }}">
                <li class="item-menu">
                    <i class="fa fa-home fa-2x" aria-hidden="true"></i> 
                    <span class="menu">Acceuil</span>
                </li>
            </a> 
            <a href="{{ path('users') }}">
                <li class="item-menu">
                    <i class="fa fa-user fa-2x" aria-hidden="true"></i> 
                    <span class="menu">Mon profil</span>
                </li>
            </a>
        </ul>
    </div> <!-- end left -->
    <div class="container ">
    <div class="content">
    
        <h1>Modification du profil de {{ app.user.firstname }} {{ app.user.name }}</h1>
        <div class="container">
        {{ form_start(form) }}
        <p>Nom :</p>
        {{ form_widget(form.name) }}
        <p>Prenom :</p>
        {{ form_widget(form.firstname) }}
        <br><br>
        <div>
        <button type="submit" class="btn btn-primary">Valider</button>
        </div>
        
        {{ form_end(form) }}
        </div>
        

    </div>
</div>    
</div>
</div>
{% endblock %}
